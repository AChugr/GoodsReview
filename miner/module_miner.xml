<?xml version="1.0" encoding="UTF-8"?>
<project name="module_miner" default="compile.module.miner">
  <dirname property="module.miner.basedir" file="${ant.file.module_miner}"/>
  
  <property name="module.jdk.home.miner" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.miner" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.miner" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.miner" value="${compiler.args}"/>
  
  <property name="miner.output.dir" value="${module.miner.basedir}/../out/production/miner"/>
  <property name="miner.testoutput.dir" value="${module.miner.basedir}/../out/test/miner"/>
  
  <path id="miner.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="miner.module.production.classpath">
    <path refid="${module.jdk.classpath.miner}"/>
    <path refid="library.lib.classpath"/>
    <pathelement location="${analyzer.output.dir}"/>
    <pathelement location="${basedir}/lib/lucene-core-3.4.0.jar"/>
    <pathelement location="${basedir}/lib/saxon"/>
    <pathelement location="${basedir}/lib/jakarta-commons"/>
    <pathelement location="${basedir}/lib/httpclient"/>
    <pathelement location="${basedir}/lib/webharvest"/>
    <pathelement location="${basedir}/lib/xfresh"/>
    <pathelement location="${basedir}/lib/log4j-1.2.15.jar"/>
    <pathelement location="${basedir}/lib/xalan"/>
    <pathelement location="${basedir}/lib/junit-4.0.jar"/>
    <pathelement location="${basedir}/lib/mysql-connector-java-5.1.18-bin.jar"/>
    <pathelement location="${basedir}/lib/rhino"/>
    <pathelement location="${basedir}/lib/lucene-analyzers-3.4.0.jar"/>
    <pathelement location="${basedir}/lib/spring"/>
    <pathelement location="${basedir}/lib/jetty"/>
    <pathelement location="${basedir}/lib/jetbrains"/>
  </path>
  
  <path id="miner.runtime.production.module.classpath">
    <pathelement location="${miner.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="analyzer.runtime.production.module.classpath"/>
  </path>
  
  <path id="miner.module.classpath">
    <path refid="${module.jdk.classpath.miner}"/>
    <pathelement location="${miner.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <pathelement location="${analyzer.testoutput.dir}"/>
    <pathelement location="${analyzer.output.dir}"/>
    <pathelement location="${basedir}/lib/lucene-core-3.4.0.jar"/>
    <pathelement location="${basedir}/lib/saxon"/>
    <pathelement location="${basedir}/lib/jakarta-commons"/>
    <pathelement location="${basedir}/lib/httpclient"/>
    <pathelement location="${basedir}/lib/webharvest"/>
    <pathelement location="${basedir}/lib/xfresh"/>
    <pathelement location="${basedir}/lib/log4j-1.2.15.jar"/>
    <pathelement location="${basedir}/lib/xalan"/>
    <pathelement location="${basedir}/lib/junit-4.0.jar"/>
    <pathelement location="${basedir}/lib/mysql-connector-java-5.1.18-bin.jar"/>
    <pathelement location="${basedir}/lib/rhino"/>
    <pathelement location="${basedir}/lib/lucene-analyzers-3.4.0.jar"/>
    <pathelement location="${basedir}/lib/spring"/>
    <pathelement location="${basedir}/lib/jetty"/>
    <pathelement location="${basedir}/lib/jetbrains"/>
  </path>
  
  <path id="miner.runtime.module.classpath">
    <pathelement location="${miner.testoutput.dir}"/>
    <pathelement location="${miner.output.dir}"/>
    <path refid="library.lib.classpath"/>
    <path refid="analyzer.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.miner">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.miner">
    <patternset refid="excluded.from.module.miner"/>
  </patternset>
  
  <path id="miner.module.sourcepath">
    <dirset dir="${module.miner.basedir}">
      <include name="src/java"/>
      <include name="src/scripts"/>
    </dirset>
  </path>
  
  <path id="miner.module.test.sourcepath">
    <dirset dir="${module.miner.basedir}">
      <include name="src/test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.miner" depends="compile.module.miner.production,compile.module.miner.tests" description="Compile module miner"/>
  
  <target name="compile.module.miner.production" depends="register.custom.compilers,compile.module.analyzer" description="Compile module miner; production classes">
    <mkdir dir="${miner.output.dir}"/>
    <javac2 destdir="${miner.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.miner}/javac">
      <compilerarg line="${compiler.args.miner}"/>
      <bootclasspath refid="miner.module.bootclasspath"/>
      <classpath refid="miner.module.production.classpath"/>
      <src refid="miner.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.miner"/>
    </javac2>
    
    <copy todir="${miner.output.dir}">
      <fileset dir="/">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="/">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.miner.tests" depends="register.custom.compilers,compile.module.miner.production" description="compile module miner; test classes" unless="skip.tests">
    <mkdir dir="${miner.testoutput.dir}"/>
    <javac2 destdir="${miner.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.miner}/javac">
      <compilerarg line="${compiler.args.miner}"/>
      <bootclasspath refid="miner.module.bootclasspath"/>
      <classpath refid="miner.module.classpath"/>
      <src refid="miner.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.miner"/>
    </javac2>
    
    <copy todir="${miner.testoutput.dir}">
      <fileset dir="${module.miner.basedir}/src/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.miner" description="cleanup module">
    <delete dir="${miner.output.dir}"/>
    <delete dir="${miner.testoutput.dir}"/>
  </target>
</project>