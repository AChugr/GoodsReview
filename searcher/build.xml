<?xml version="1.0" encoding="UTF-8"?>
<project name="GoodsReview" default="all" basedir=".">

    <!--внешние зависимости-->
    <path id="libs">
            <fileset dir="${lib.dir}" includes="**/*.jar"/>
            <fileset dir="${dist.dir}" includes="**/*.jar"/>
    </path>

    <property name="src.searcher.dir" location="${project.dir}/searcher/src/java/"/>
    <pathconvert pathsep=" " property="libs_manifest" refid="libs"/>       <!--classpath для jar-архива-->

    <target name="all">

	<!--class-файлы создаются в папку build/classes-->
        <javac srcdir="${src.searcher.dir}"
               destdir="${build.dir}/classes"
               debug="true"
               deprecation="true"
               optimize="false"
               includeAntRuntime="false">
            <classpath refid="libs"/>
        </javac>

	<!--собирается архив с классом, у которого есть метод main в папку dist-->
        <jar destfile="${dist.dir}/searcher.jar" basedir="${classes.dir}" includes="ru/goodsReview/searcher/**/*.* net/sf/xfresh/**/*.*" >
            <manifest>
                <attribute name="Built-By" value="searcher: build.xml"/>
                <!--<attribute name="Main-Class" value="ru.goodsReview.miner.Test"/> -->  <!--это класс который запускается при запуске джарника-->            </manifest>
        </jar>

	<echo>searcher building complete</echo>
    </target>

</project>

