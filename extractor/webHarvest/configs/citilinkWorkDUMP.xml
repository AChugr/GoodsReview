<?xml version="1.0" encoding="UTF-8"?>

<config>

   <var-def name="MaxPage">
            49
    </var-def>
   
   
    <while condition="${MaxPage.toInt() + 1>i.toInt()}" index="i">
    	<empty>
			
			
			
        	<loop item="filename">
            <list>
            	<file action="list" path = "CitilinkHTML" listdirs="no" listfilter="*.html"/>
            </list>
            <body>
            	<empty>
            		
             		<var-def name = "BadFeatures">
            		<xpath expression="//*[@class='m']/p[3]">
           			    	<file action="read" path="DownloadedCitilink${filename}opinion.html"/>
           			</xpath>
        			</var-def>        			
            	</empty>
            </body>
        </loop>
    </empty>
    </while>
</config>